{
    "name": "privacy-screen",
    "version": "1.0.0",
    "description": "Privacy Screen application with spotlight effect for study and work",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --win --x64",
        "build:dir": "electron-builder --win --x64 --dir",
        "dist": "npm run build"
    },
    "keywords": [
        "privacy",
        "screen",
        "spotlight",
        "focus",
        "study"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.privacyscreen.app",
        "productName": "Privacy Screen",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}